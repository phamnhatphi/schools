root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = false
indent_size = 2

#  JavaScript
[*.{js,ts,vue}]
indent_size = 4
max_line_length = 100

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
